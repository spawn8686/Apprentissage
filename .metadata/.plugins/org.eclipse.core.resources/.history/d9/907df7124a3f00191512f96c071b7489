package openClassRoom;

import java.util.Scanner;

public class Conditions 
{
	public static void main(String[] args) 
	{
		//%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
		// lien de l'exercice "https://openclassrooms.com/fr/courses/26832-apprenez-a-programmer-en-java/20757-definissez-des-conditions"
		//%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
		/*
		 * Création d'une variable int et affectation du valeur aléatoire
		 * création d'un test conditionnel, afin de déterminer si la variable et "positif, nul, négative"
		 * */
		int i = -5;
		if (i<0) 
		{
			System.out.println("La valeur est négative!");
		} else 
		{
			if (i==0) 
			{
				System.out.println("La valeur est nul!");
			} else 
			{
				System.out.println("La valeur est positive!");
			}			
		}
		/*
		 * Même exercice que précédent, mais simplifié avec la condition else if
		 * */
		if (i<0) 
			System.out.println("La valeur est négative!");
		else if (i>0)
			System.out.println("La valeur est positive!");
		else
			System.out.println("La valeur est nul!");
	}
}
