package openClassRoom;

import java.util.Scanner;

public class Boucles {

	public static void main(String[] args) 
	{
		Scanner scan = new Scanner(System.in);
		String str = "true";
		
		while (str == "true") 
		{
			System.out.println("Ecrivez true pour continuer, ou false pour stopper la boucle : ");
			str = scan.nextLine();
			if(str == "true")
			System.out.println("Vous avez choisi de continuer la boucle!");
			else
				System.out.println("Vous avez choisi de stopper la boucle!");
		}
	}

}
